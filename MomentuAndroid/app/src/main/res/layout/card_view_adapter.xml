<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <TableLayout
        android:id="@+id/tableForButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:shrinkColumns="1,2,3">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp">

            <Button
                android:id="@+id/bTag1"
                android:layout_width="@dimen/trending_tag_button_width"
                android:layout_height="@dimen/trending_tag_button_height"
                android:layout_column="1"
                android:layout_weight="1"
                android:background="@drawable/capsule_button"
                android:onClick="clickToSearch"
                android:text="#Tag1"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="invisible" />

            <Button
                android:id="@+id/bTag2"
                android:layout_width="@dimen/trending_tag_button_width"
                android:layout_height="@dimen/trending_tag_button_height"
                android:layout_column="2"
                android:layout_weight="1"
                android:background="@drawable/capsule_button"
                android:onClick="clickToSearch"
                android:text="#Tag2"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="invisible" />

            <Button
                android:id="@+id/bTag3"
                android:layout_width="@dimen/trending_tag_button_width"
                android:layout_height="@dimen/trending_tag_button_height"
                android:layout_column="3"
                android:layout_weight="1"
                android:background="@drawable/capsule_button"
                android:onClick="clickToSearch"
                android:text="#Tag3"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="invisible" />

        </TableRow>

        <TableRow android:layout_height="wrap_content">

            <Button
                android:id="@+id/bTag4"
                android:layout_width="@dimen/trending_tag_button_width"
                android:layout_height="@dimen/trending_tag_button_height"
                android:layout_column="1"
                android:layout_weight="1"
                android:background="@drawable/capsule_button"
                android:onClick="clickToSearch"
                android:text="#Tag4"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="invisible" />

            <Button
                android:id="@+id/bTag5"
                android:layout_width="@dimen/trending_tag_button_width"
                android:layout_height="@dimen/trending_tag_button_height"
                android:layout_column="2"
                android:layout_weight="1"
                android:background="@drawable/capsule_button"
                android:onClick="clickToSearch"
                android:text="#Tag5"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="invisible" />

            <Button
                android:id="@+id/bTag6"
                android:layout_width="@dimen/trending_tag_button_width"
                android:layout_height="@dimen/trending_tag_button_height"
                android:layout_column="3"
                android:layout_weight="1"
                android:background="@drawable/capsule_button"
                android:onClick="clickToSearch"
                android:text="#Tag6"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="invisible" />
        </TableRow>

    </TableLayout>

</android.support.v7.widget.CardView>
