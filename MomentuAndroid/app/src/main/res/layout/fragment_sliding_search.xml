<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SearchActivity">

    <RelativeLayout
        android:id="@+id/trends_for_you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hashtag_description"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <Button
                    android:id="@+id/bTag1"
                    android:layout_width="@dimen/trending_tag_button_width"
                    android:layout_height="@dimen/trending_tag_button_height"
                    android:background="@drawable/capsule_button"
                    android:text="#Tag1"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/bTag2"
                    android:layout_width="@dimen/trending_tag_button_width"
                    android:layout_height="@dimen/trending_tag_button_height"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/bTag1"
                    android:background="@drawable/capsule_button"
                    android:text="#Tag2"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/bTag3"
                    android:layout_width="@dimen/trending_tag_button_width"
                    android:layout_height="@dimen/trending_tag_button_height"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/bTag2"
                    android:background="@drawable/capsule_button"
                    android:text="#Tag3"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/bTag4"
                    android:layout_width="@dimen/trending_tag_button_width"
                    android:layout_height="@dimen/trending_tag_button_height"
                    android:layout_alignLeft="@+id/bTag1"
                    android:layout_alignStart="@+id/bTag1"
                    android:layout_below="@+id/bTag1"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/capsule_button"
                    android:text="#Tag4"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/bTag5"
                    android:layout_width="@dimen/trending_tag_button_width"
                    android:layout_height="@dimen/trending_tag_button_height"
                    android:layout_alignEnd="@+id/bTag2"
                    android:layout_alignRight="@+id/bTag2"
                    android:layout_alignTop="@+id/bTag4"
                    android:background="@drawable/capsule_button"
                    android:text="#Tag5"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/bTag6"
                    android:layout_width="@dimen/trending_tag_button_width"
                    android:layout_height="@dimen/trending_tag_button_height"
                    android:layout_alignEnd="@+id/bTag3"
                    android:layout_alignRight="@+id/bTag3"
                    android:layout_alignTop="@+id/bTag4"
                    android:background="@drawable/capsule_button"
                    android:text="#Tag6"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    >

    <FrameLayout
        android:id="@+id/dim_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_results_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/header_bar_height"
            android:paddingTop="50dp"
            android:translationY="0dp" />

        <com.arlib.floatingsearchview.FloatingSearchView
            android:id="@+id/floating_search_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:translationY="@dimen/header_bar_height"
            app:floatingSearch_close_search_on_keyboard_dismiss="false"
            app:floatingSearch_dimBackground="false"
            app:floatingSearch_dismissOnOutsideTouch="true"
            app:floatingSearch_leftActionMode="showHamburger"
            app:floatingSearch_menu="@menu/menu_search_view"
            app:floatingSearch_searchBarMarginLeft="@dimen/search_view_inset"
            app:floatingSearch_searchBarMarginRight="@dimen/search_view_inset"
            app:floatingSearch_searchBarMarginTop="@dimen/search_view_inset"
            app:floatingSearch_searchHint="Searh hastag..."
            app:floatingSearch_showOverFlowMenu="true"
            app:floatingSearch_showSearchKey="true"
            app:floatingSearch_suggestionsListAnimDuration="250" />

    </FrameLayout>

</RelativeLayout>